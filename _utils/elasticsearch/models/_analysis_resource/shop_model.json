{
    "schema" : {
        "price_model" : {
            "type"      : "object",
            "properties": {
                "sort_price"       : {"type": "number"},
                "is_multiple"      : {"type": "boolean"},
                "is_ids_are_unique": {"type": "boolean"},
                "discount"         : {
                    "type"                : "object",
                    "properties"          : {
                        "default": {
                            "type"          : "object",
                            "properties"    : {
                                "discount_type": {"enums": ["absolute", "percent"]}
                            },
                            "discount_value": {"type": "number"}
                        }
                    },
                    "additionalProperties": true
                },
                "variation"        : {
                    "type" : "array",
                    "items": {
                        "type"      : "object",
                        "properties": {
                            "price"     : {
                                "type"      : "object",
                                "properties": {
                                    "value"   : {"type": "number"},
                                    "currency": {"type": "string"}
                                },
                                "additionalProperties": false
                            },
                            "product_id": {"type": "string"},
                            "size"      : {
                                "type"      : "object",
                                "properties": {
                                    "value"   : {"type": "number"},
                                    "dimension": {"type": "string"},
                                    "more_data": {"type": "string"}
                                },
                                "additionalProperties": false
                            }
                        }
                    }
                }
            }
        },
        "bio_object" : {
            "type"      : "array",
            "items"     : {
                "type"      : "object",
                "properties": {
                    "type"          : {"type": "string"},
                    "name"          : {"type": "string"},
                    "aliases"       : {
                        "type" : "array",
                        "items": {"type": "string"}
                    },
                    "gene"       : {
                        "type" : "array",
                        "items": {"type": "string"}
                    },
                    "organism"       : {
                        "type" : "array",
                        "items": {"type": "string"}
                    },
                    "ncbi_organism_tax_id" : {"type": "string"},
                    "external_links": {
                        "type" : "array",
                        "items": {
                            "type"      : "object",
                            "properties": {
                                "key": {"type": "string"},
                                "id" : {"type": "string"}
                            }
                        }
                    }
                }
            }
        }
    },

    "settings" : {
        "price_model": {
            "type"      : "object",
            "properties": {
                "sort_price"       : {"type": "float", "doc_values": true},
                "is_multiple"      : {"type": "boolean"},
                "is_ids_are_unique": {"type": "boolean"},
                "discount"         : {
                    "type"      : "object",
                    "properties": {
                        "default": {
                            "type"          : "object",
                            "properties"    : {
                                "discount_type": {"type": "keyword"},
                                "discount_value": {"type": "float"}
                            }
                        }
                    }
                },
                "variation"        : {
                    "type"      : "object",
                    "properties": {
                        "price"     : {
                            "type"      : "object",
                            "properties": {
                                "value"   : {"type": "float"},
                                "currency": {"type": "keyword"}
                            }
                        },
                        "product_id": {"type": "keyword"},
                        "size"      : {
                            "type"      : "object",
                            "properties": {
                                "value"   : {"type": "float"},
                                "dimension": {"type": "keyword"},
                                "more_data": {"type": "keyword"}
                            }
                        }
                    }
                }
            }
        }
    },
    "bio_object" : {
        "type"          : "object",
        "properties"    : {
            "type"    : {"type": "keyword"},
            "name"    : {"type": "keyword"},
            "aliases" : {"type": "keyword"},
            "gene"    : {"type": "keyword"},
            "organism": {"type": "keyword"},
            "ncbi_organism_tax_id": {"type": "keyword"},
            "external_links": {
                "type"      : "object",
                "properties": {
                    "key": {"type": "keyword"},
                    "id" : {"type": "keyword"}
                }
            }
        }
    }
}