{
    "edge_phrase_analyzer"  : {
        "type"     : "custom",
        "char_filter": ["my_char_filter"],
        "tokenizer": "keyword",
        "filter"   : ["lowercase", "edge_filter"]
    },
    "term_lowercase": {
        "type"     : "custom",
        "char_filter": ["my_char_filter"],
        "tokenizer": "keyword",
        "filter"   : ["lowercase"]
    },
    "edge_analyzer" : {
        "type"     : "custom",
        "char_filter": ["my_char_filter"],
        "tokenizer": "whitespace",
        "filter"   : ["lowercase", "edge_filter"]
    },
    "lowercase_whitespace": {
        "type": "custom",
        "char_filter": ["my_char_filter"],
        "tokenizer": "whitespace",
        "filter": [ "lowercase" ]
    }
}